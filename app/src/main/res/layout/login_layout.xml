<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/loginscreenpic"
        android:id="@+id/layout_info1"
        android:visibility="visible"
        android:orientation="horizontal">
    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="0dp"
        android:layout_alignParentBottom="false">

        <com.facebook.login.widget.ProfilePictureView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:text="NAME"
            android:textStyle="bold"
            android:layout_below="@+id/layout_info"
            android:layout_alignParentStart="true"
            android:layout_marginTop="38dp"
            android:textSize="20dp"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/email"
            android:text="NAME"
            android:textStyle="bold"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_below="@+id/name"
            android:layout_centerHorizontal="true" />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Classes"
        android:id="@+id/classButton"
        android:layout_marginTop="44dp"
        android:visibility="gone"
        android:onClick="classReg"
        android:layout_alignTop="@+id/login_button"
        android:layout_alignStart="@+id/searchButton"
        android:layout_alignEnd="@+id/searchButton" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search Classes"
        android:id="@+id/searchButton"
        android:layout_below="@+id/classButton"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:onClick="classNav"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Invites"
        android:id="@+id/viewInvites"
        android:layout_below="@+id/searchButton"
        android:visibility="gone"
        android:layout_alignStart="@+id/searchButton"
        android:layout_alignEnd="@+id/searchButton" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Messages"
        android:id="@+id/viewMsg"
        android:visibility="gone"
        android:layout_below="@+id/viewInvites"
        android:layout_alignEnd="@+id/viewInvites"
        android:layout_alignStart="@+id/viewInvites"
        android:onClick="getMsgs"/>

</RelativeLayout>